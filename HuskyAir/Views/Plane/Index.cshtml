@model IEnumerable<HuskyAir.Models.Plane>

@{
    ViewBag.Title = "Plane Information";
}

<h2>Plane Information</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by N-number: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fk_PilotIDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfEngines)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfPassengers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CurrentLocation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WeightCapacity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fk_PilotIDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfEngines)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfPassengers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentLocation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WeightCapacity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.NNumber.Trim() }) |
            @Html.ActionLink("Details", "Details", new { id=item.NNumber.Trim() }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.NNumber.Trim() })
        </td>
    </tr>
}

</table>
