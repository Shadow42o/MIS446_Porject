<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Husky Air", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <!--
                The navbar section that is used consistently over all pages
                To add a new link, follow this format:
                Html.ActionLink("LinkTextToDisplay", "FileNameOf'.cshtml'Page", "ViewsFolderName")
            -->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Patient</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                            <li>@Html.ActionLink("Patient Information", "Index", "Patient")</li>
                            <li>@Html.ActionLink("Insurance Information", "Index", "Insurance")</li>
                            <hr />
                            <li>@Html.ActionLink("Outside Party Information", "Index", "OutsideParties")</li>
                        </ul>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Pilot</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                            <li>@Html.ActionLink("Pilot Information", "Index", "Pilot")</li>
                            <li>@Html.ActionLink("Pilot Availability", "Index", "PilotDate")</li>
                            <li>@Html.ActionLink("Plane Information", "Index", "Plane")</li>
                            <hr />
                            <li>@Html.ActionLink("Certifications", "Index", "Certification")</li>
                        </ul>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" id="dropdownCommonMenu" data-toggle="dropdown">Flight</a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownCommonMenu">
                            <li>@Html.ActionLink("Passenger Information", "Index", "Passenger")</li>
                            <li>@Html.ActionLink("Flight Information", "Index", "Flight")</li>
                        </ul>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
