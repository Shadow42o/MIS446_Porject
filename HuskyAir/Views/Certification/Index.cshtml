@model IEnumerable<HuskyAir.Models.Certification>

@{
    ViewBag.Title = "Certification";
}

<h2>Certification</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pilot.PilotIDNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pilot.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pilot.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Certification1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pilot.PilotIDNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pilot.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pilot.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Certification1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
